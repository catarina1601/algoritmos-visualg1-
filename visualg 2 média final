Var
   n1: real
   n2: real
   soma: real
   media: real


Inicio
      escreva ("Digite a nota 1:")
      leia (n1)
      escreva ("Digite a nota 2:")
      leia (n2)
      media <- (n1+n2)/2
      escreva ("Sua média é:")
      escreval (media)
      se (media>=6)entao
      escreval ("Você está aprovado!! Parabéns!")
      senao
      escreval ("Que pena, você não foi aprovado...")
      fimse
      
      
      


Fimalgoritmo
